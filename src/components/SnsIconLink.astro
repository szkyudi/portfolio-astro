---
export interface Props {
	src: string;
	alt: string;
	href: string;
}

const { src, alt, href } = Astro.props;
---

<a href={href} target="_blank" rel="noreferrer">
	<img src={src} alt={alt}>
</a>

<style>
	a {
		display: inline-block;
		width: 36px;
		height: 36px;
		border-radius: 50%;
	}
	a:hover {
		opacity: 0.6;
	}
	img {
		display: block;
		width: 100%;
		height: 100%;
		object-fit: contain;
		object-position: center;
	}
</style>
